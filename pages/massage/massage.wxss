.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  padding: 30rpx 40rpx;
  background-color: #37c2bc;
  color: #fff;
}

.title_left {
  width: 210rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #afe7e4;
}

.title_left_key {
  font-size: 45rpx;
  color: #fff;
}

.title_right_msg_icon {
  width: 48rpx;
  height: 48rpx;
}

.search {
  background-image: url("data:img/jpg;base64,");
  background-repeat: no-repeat;
  background-position: 32rpx center;
  padding: 20rpx 80rpx;
  margin: 34rpx 50rpx 0 40rpx;
  background-color: #f8f8f8;
  color: #aaaaaa  ;
  font-size: 30rpx;      
  font-weight: 300;
  border-radius: 10rpx;
}

.msg_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  padding: 0 40rpx;
  margin-top: 50rpx;
}

.msg_title_text {
  font-size: 36rpx;
}

.msg_title_btn {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border: 1px solid #ebebeb;
  border-radius: 10rpx;
  color: #aaaaaa;
}